<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/jquery-color-master/jquery.color.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css");
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/mainBody.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="icon" href="~/Images/logo.ico" />
    <style type="text/css">
        .carousel-caption {
            background-color: rgba(193,193,193,0.7);
            padding-top: 0px;
            width:700px;
            left:30px;
        }

        #fbIcon {
            width:4%;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {

            if ($("#carouselExampleIndicators") != null) {
                $("#carouselExampleIndicators").carousel();

            }
            console.log("start");
            $(".navbar-header").mouseover(function() {
                if (!$(".navbar-header").hasClass('highlighted')) {
                   $(".navbar-header").toggleClass('highlighted');
                }
            });

            $(".navbar-header").mouseout(function() {
               if ($(".navbar-header").hasClass('highlighted')) {
                   $(".navbar-header").toggleClass('highlighted');
                }
            });

           $(".navbar-nav li").mouseover(function() {
                if (!$(this).hasClass('highlighted')) {
                    $(this).toggleClass('highlighted');
                }   
            });

           $(".navbar-nav li").mouseout(function() {
                if ($(this).hasClass('highlighted')) {
                    $(this).toggleClass('highlighted');
                }              
            });
        });
    </script>

</head>
<body id="bodycolor">
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v6.0"></script>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navbarcolor">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bruno's Tipper and Loader Hire", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bruno's Tipper Hire</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
